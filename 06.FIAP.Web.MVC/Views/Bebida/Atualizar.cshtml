@model _06.FIAP.Web.MVC.Models.Bebida

@{
    ViewBag.Title = "Atualizar";
}

<h2>Atualizar Bebida</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-danger">@TempData["msg"]</div>
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(b => b.BebidaId)
    <div class="form-group">
        @Html.LabelFor(b => b.Nome)
        @Html.TextBoxFor(b => b.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(b => b.Preco)
        @Html.TextBoxFor(b => b.Preco, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(b => b.Destilada)
        @Html.LabelFor(b => b.Destilada)
    </div>
    <input type="submit" value="Editar" class="btn btn-primary" />
}

